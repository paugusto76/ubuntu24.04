
[weather]
command=~/.config/i3blocks/weather/weather.sh | tee /tmp/weather.log
interval=1800

[BATTERY]
command=~/.config/i3blocks/battery/battery_info.sh | tee /tmp/battery.log
interval=3

[CPU]
full_text= CPU:  0.00% @ +00.0Â°C 
command=~/.config/i3blocks/cpu/cpu_info.sh | tee /tmp/cpu.log
interval=repeat
color=#00B4EB

[MEM]
command=free -h | awk '/Mem:/ { printf(" MEM: %5s/%s \n", $3, $2) }' | tee /tmp/mem.log
interval=1
color=#FEC925

