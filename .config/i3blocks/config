[DISK]
command=df -h / | awk '/\//{ printf(" FS: %4s/%s \n", $4, $2) }' | tee /tmp/disk.log
interval=2
color=#C9E3DB

[TIME_DATE]
command=date +" %a, %d %b - %H:%M:%S" | tee /tmp/time_date.log
interval=1
